generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model IdempotencyRecord {
  key       String            @id
  status    IdempotencyStatus
  response  Json?
  createdAt DateTime          @default(now())
  expiresAt DateTime

  @@index([status])
  @@map("idempotency_records")
}

model Payment {
  id             String        @id @default(uuid())
  userId         String
  amount         Decimal       @db.Decimal(10, 2)
  status         PaymentStatus @default(PENDING)
  errorMessage   String?
  idempotencyKey String        @unique
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@map("payments")
}

model Account {
  id              String   @id @default(uuid())
  userId          String   @unique
  balance         Decimal  @db.Decimal(10, 2)
  reservedBalance Decimal  @default(0) @db.Decimal(10, 2)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  reservations FundReservation[]

  @@map("accounts")
}

model FundReservation {
  id        String            @id @default(uuid())
  accountId String
  paymentId String            @unique
  amount    Decimal           @db.Decimal(10, 2)
  status    ReservationStatus @default(ACTIVE)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  expiresAt DateTime

  account Account @relation(fields: [accountId], references: [id])

  @@index([accountId])
  @@index([status])
  @@map("fund_reservations")
}

model SagaExecution {
  id               String     @id @default(uuid())
  paymentId        String     @unique
  currentStep      String
  status           SagaStatus
  compensationStep String?
  error            String?
  startedAt        DateTime   @default(now())
  completedAt      DateTime?

  steps SagaStep[]

  @@map("saga_executions")
}

model SagaStep {
  id          String     @id @default(uuid())
  sagaId      String
  stepName    String
  status      StepStatus
  startedAt   DateTime   @default(now())
  completedAt DateTime?
  error       String?
  retryCount  Int        @default(0)

  saga SagaExecution @relation(fields: [sagaId], references: [id])

  @@index([sagaId])
  @@map("saga_steps")
}

model DomainEvent {
  id            String   @id @default(uuid())
  aggregateId   String
  aggregateType String
  eventType     String
  eventData     Json
  version       Int
  timestamp     DateTime @default(now())
  userId        String?
  metadata      Json?

  @@unique([aggregateId, version])
  @@index([aggregateId, aggregateType])
  @@index([eventType, timestamp])
  @@map("domain_events")
}

model EventSnapshot {
  id          String   @id @default(uuid())
  aggregateId String   @unique
  version     Int
  state       Json
  createdAt   DateTime @default(now())

  @@index([aggregateId])
  @@map("event_snapshots")
}

model PaymentProjection {
  paymentId     String    @id
  userId        String
  amount        Decimal   @db.Decimal(10, 2)
  status        String
  gatewayTxId   String?
  reservationId String?
  totalEvents   Int
  lastEventType String
  lastEventAt   DateTime
  createdAt     DateTime
  completedAt   DateTime?

  @@index([userId])
  @@index([status])
  @@map("payment_projections")
}

model AccountBalanceProjection {
  accountId       String   @id
  userId          String   @unique
  currentBalance  Decimal  @db.Decimal(10, 2)
  reservedBalance Decimal  @db.Decimal(10, 2)
  totalDebits     Decimal  @db.Decimal(10, 2)
  totalCredits    Decimal  @db.Decimal(10, 2)
  lastEventAt     DateTime
  updatedAt       DateTime @updatedAt

  @@map("account_balance_projections")
}

enum SagaStatus {
  INITIATED
  IN_PROGRESS
  COMPLETED
  COMPENSATING
  COMPENSATED
  FAILED
}

enum StepStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  COMPENSATED
}

enum ReservationStatus {
  ACTIVE
  CONFIRMED
  RELEASED
}

enum IdempotencyStatus {
  PROCESSING
  COMPLETED
  FAILED
}

enum PaymentStatus {
  PENDING
  FUNDS_RESERVED
  PROCESSING
  COMPLETED
  FAILED
  COMPENSATING
  COMPENSATED
}
