generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model IdempotencyRecord {
  key       String            @id
  status    IdempotencyStatus
  response  Json?
  createdAt DateTime          @default(now())
  expiresAt DateTime

  @@index([status])
  @@map("idempotency_records")
}

model Payment {
  id             String        @id @default(uuid())
  userId         String
  amount         Decimal       @db.Decimal(10, 2)
  status         PaymentStatus @default(PENDING)
  errorMessage   String?
  idempotencyKey String        @unique
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@map("payments")
}

model Account {
  id              String   @id @default(uuid())
  userId          String   @unique
  balance         Decimal  @db.Decimal(10, 2)
  reservedBalance Decimal  @default(0) @db.Decimal(10, 2)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  reservations FundReservation[]

  @@map("accounts")
}

model FundReservation {
  id        String            @id @default(uuid())
  accountId String
  paymentId String            @unique
  amount    Decimal           @db.Decimal(10, 2)
  status    ReservationStatus @default(ACTIVE)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  expiresAt DateTime

  account Account @relation(fields: [accountId], references: [id])

  @@index([accountId])
  @@index([status])
  @@map("fund_reservations")
}

model SagaExecution {
  id               String     @id @default(uuid())
  paymentId        String     @unique
  currentStep      String
  status           SagaStatus
  compensationStep String?
  error            String?
  startedAt        DateTime   @default(now())
  completedAt      DateTime?

  steps SagaStep[]

  @@map("saga_executions")
}

model SagaStep {
  id          String     @id @default(uuid())
  sagaId      String
  stepName    String
  status      StepStatus
  startedAt   DateTime   @default(now())
  completedAt DateTime?
  error       String?
  retryCount  Int        @default(0)

  saga SagaExecution @relation(fields: [sagaId], references: [id])

  @@index([sagaId])
  @@map("saga_steps")
}

enum SagaStatus {
  INITIATED
  IN_PROGRESS
  COMPLETED
  COMPENSATING
  COMPENSATED
  FAILED
}

enum StepStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  COMPENSATED
}

enum ReservationStatus {
  ACTIVE
  CONFIRMED
  RELEASED
}

enum IdempotencyStatus {
  PROCESSING
  COMPLETED
  FAILED
}

enum PaymentStatus {
  PENDING
  FUNDS_RESERVED
  PROCESSING
  COMPLETED
  FAILED
  COMPENSATING
  COMPENSATED
}
